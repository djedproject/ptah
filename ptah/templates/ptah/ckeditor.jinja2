<textarea id="{{context.id}}" name="{{context.name}}"
   {{ context.get_html_attrs()|xmlattr }}>{{context.form_value}}</textarea>

<script language="javascript" type="text/javascript">
  curl(['jquery', 'ckeditor'],
  function($) {
    setTimeout(function() {
       if (CKEDITOR.instances['{{context.id}}']) {
          CKEDITOR.instances['{{context.id}}'].destroy(true)
       }
       $('#{{context.id}}').ckeditor(function(){
          $('#{{context.id}}').parent().css('height', 'auto')
       }, {'toolbar': 'Basic'})

     }, 100)})
</script>

