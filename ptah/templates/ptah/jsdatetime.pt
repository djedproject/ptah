<div class="input-group date" id="${context.id}">
  <input type="text" tal:attributes="context.get_html_attrs()"
    data-date- />
  <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
</div>
<script>
  curl(['jquery', 'bootstrap3-datetimepicker', 'css!bootstrap3-datetimepicker-css'], function($){
    $(function () {
      $('#${context.id}').datetimepicker({
        format: 'YYYY-MM-DD HH:mm',
        language: '${request.locale_name}'
      });
    });
  });
</script>
