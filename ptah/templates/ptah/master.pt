<!DOCTYPE html>
<html lang="en">
  <head>
    <title>${view.site_title}</title>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>

    ${structure: request.init_amd()}
    ${structure: request.include_js('bootstrap')}
    ${structure: request.include_css('bootstrap-css')}
    <style type="text/css">
        body {margin-top:50px;}
    </style>
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="${view.application_url}">${view.site_title}</a>

          <ul class="nav" tal:condition="view.actions">
            <li tal:repeat="item view.actions">
              <a href="${item['url']}">${item['title']}</a>
            </li>
          </ul>

          <ul class="nav pull-right" tal:condition="view.user">
            <li>
-              <a href="#"
                 tal:content="view.user.name">:
              </a>
            </li>
            <li class="">
              <a href="${view.manage_url}/">Manage</a>
            </li>
            <li class="">
              <a href="${view.application_url}/logout.html">Logout</a>
            </li>
          </ul>

          <ul class="nav pull-right" tal:condition="not view.user">
            <li>
              <a href="${view.application_url}/join.html">Join</a>
            </li>
            <li>
              <a href="${view.application_url}/login.html">Login</a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    ${structure: content}

    <footer>
      <p>&copy; Ptah Project 2011-2012</p>
    </footer>
  </body>
</html>
