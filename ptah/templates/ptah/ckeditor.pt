<div style="height: 250px">
<textarea
   id="" name="" class="" cols="" rows=""
   tabindex="" disabled="" readonly="" accesskey=""
   style="display: none"
   tal:define="attrs context.get_html_attrs()"
   tal:attributes="id context.id;
                   name context.name;
                   class attrs['class'];
                   title attrs['title'];
                   lang attrs['lang'];
                   disabled attrs['disabled'];
                   tabindex attrs['tabindex'];
                   cols attrs['cols'];
                   rows attrs['rows'];
                   readonly attrs['readonly'];
                   accesskey attrs['accesskey'];"
   tal:content="context.form_value" />
</div>

<script language="javascript" type="text/javascript">
  curl(['jquery', 'ckeditor'],
  function($) {
    setTimeout(function() {
       if (CKEDITOR.instances['${context.id}']) {
          CKEDITOR.instances['${context.id}'].destroy(true)
       }
       $('#${context.id}').ckeditor(function(){
          $('#${context.id}').parent().css('height', 'auto')
       }, {'toolbar': 'Basic'})

     }, 100)})
</script>
