<table class="zebra-striped">
  <tbody>
    <tr tal:repeat="action actions">
      <td tal:define="s action.args[0];
		      r action.args[1]">
	<h4>${rst_to_html(r.__doc__ or '')}
	  <small>
	    ${s}
	  </small>
	  <small>
	    <a href="${manage}/source.html?pkg=${action.info.module.__name__}#sl-${action.info.codeinfo[1]}">
	      ${r.__name__}</a>
	</small></h4>
      </td>
    </tr>
  </tbody>
</table>
