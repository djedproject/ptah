<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>${view.site_title}</title>
    ${structure: request.require('css!bootstrap-css')}
    <link type="text/css" rel="stylesheet"
          href="${request.static_url('{{package}}:static/app.css')}" />
    <link rel="shortcut icon"
          href="${request.static_url('{{package}}:static/ico/favicon.ico')}" />
  </head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a tal:condition="view.site_title" class="brand" href="${view.application_url}">${view.site_title}</a>


        <ul class="nav" tal:condition="view.actions">
          <li tal:repeat="item view.actions">
            <a href="${item['url']}">${item['title']}</a>
          </li>
        </ul>

        <ul class="nav pull-right" tal:condition="view.user">
          <li>
-              <a href="#"
               tal:content="view.user.name">:
            </a>
          </li>
          <li class="">
            <a href="${view.manage_url}/">Manage</a>
          </li>
          <li class="">
            <a href="${view.application_url}/logout.html">Logout</a>
          </li>
        </ul>

        <ul class="nav pull-right" tal:condition="not view.user">
          <li>
            <a href="${view.application_url}/join.html">Join</a>
          </li>
          <li>
            <a href="${view.application_url}/login.html">Login</a>
          </li>
        </ul>
      </div>
    </div>
  </div>

  ${structure: content}

  <footer class="container">
    <p>&copy; Ptah Project 2011-2012</p>
  </footer>
</body>
</html>
