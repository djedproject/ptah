import ptah
from ptah import form

ptah.register_settings(
    '{{package}}',

    ptah.form.TextField(
        'band',
        default = 'Primus',
        title = 'Favorite band',
        description = 'This is your favorite band.'),

    ptah.form.TextField(
        'happy',
        default = True,
        title = 'Are you happy?',
        description = 'Does Ptah bring you happiness?'),

    title = '{{package}} settings',
    description = 'Configuration settings for {{package}}.'
    )
